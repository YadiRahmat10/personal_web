<html lang='en' class='h-100'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Contact</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='public/css/style.css' />
  </head>

  <body class='d-flex flex-column h-100'>
    <!-- Navbar -->
    <nav class='navbar navbar-expand-lg navbar-light bg-white shadow py-3'>
      <div class='container'>
        <a class='navbar-brand' href='/'>
          <img
            src='public/assets/logo.png'
            alt='logo_adbi'
            width='100%'
            height='30'
          />
        </a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/'>Home</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/blog'>Blog</a>
            </li>
          </ul>
          <a
            class='btn bg-green-teal text-white ms-3 px-4 rounded-pill'
            href='/contact-me'
          >Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <main
      class='container-fuild d-flex align-items-center justify-content-center'
    >
      <!-- Form -->
      <section class='container-contact'>
        <!-- Alert success if mail sent -->
        {{#if msg}}
          <svg xmlns='http://www.w3.org/2000/svg' style='display: none;'>
            <symbol
              id='check-circle-fill'
              fill='currentColor'
              viewBox='0 0 16 16'
            >
              <path
                d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z'
              ></path>
            </symbol>
          </svg>
          <div
            class='alert alert-success d-flex align-items-center'
            role='alert'
          >
            <svg
              class='bi flex-shrink-0 me-3'
              width='24'
              height='24'
              role='img'
              aria-label='Success:'
            ><use xlink:href='#check-circle-fill'></use></svg>
            <div>
              Thank you for contacting me<br />
              Your email has been received and is being processed.
            </div>
          </div>
        {{/if}}
        <!-- End alert success if mail sent -->

        <!-- Form input -->
        <form
          action='/contact-me'
          method='POST'
          class='needs-validation'
          novalidate
        >
          <!-- Name input -->
          <div class='mb-3'>
            <label for='inputName' class='form-label fw-bold'>Name</label>
            <input
              type='text'
              class='form-control {{errorMessages.name.appendClass}}'
              id='inputName'
              name='name'
              value='{{letter.name}}'
            />
            <div
              id='validationServerUsernameFeedback'
              class='{{errorMessages.name.feedback}}'
            >
              {{errorMessages.name.msg}}
            </div>
          </div>

          <!-- Email input -->
          <div class='mb-3'>
            <label for='inputEmail' class='form-label fw-bold'>Email</label>
            <input
              type='email'
              class='form-control {{errorMessages.email.appendClass}}'
              id='inputEmail'
              name='email'
              value='{{letter.email}}'
            />
            <div
              id='validationServerUsernameFeedback'
              class='{{errorMessages.email.feedback}}'
            >
              {{errorMessages.email.msg}}
            </div>
          </div>

          <!-- Phone Number input -->
          <div class='mb-3'>
            <label for='inputPhone' class='form-label fw-bold'>Phone Number</label>
            <input
              type='text'
              class='form-control {{errorMessages.phone.appendClass}}'
              id='inputPhone'
              name='phone'
              value='{{letter.phone}}'
            />
            <div
              id='validationServerUsernameFeedback'
              class='{{errorMessages.phone.feedback}}'
            >
              {{errorMessages.phone.msg}}
            </div>
          </div>

          <!-- Subject input -->
          <div class='mb-3'>
            <label for='inputPhone' class='form-label fw-bold'>Subject</label>
            <select
              class='form-select {{errorMessages.subject.appendClass}}'
              aria-label='Default select example'
              name='subject'
            >
              <option value="Let's Talk" selected>Let's Talk</option>
              <option value='Project'>Project</option>
              <option value='Hire'>Hire</option>
            </select>
            <div class='{{errorMessages.subject.feedback}}'>
              {{errorMessages.subject.msg}}
            </div>
          </div>

          <!-- Textarea input -->
          <div class='mb-3'>
            <label for='inputMessage' class='form-label fw-bold'>Your Message</label>
            <textarea
              class='form-control {{errorMessages.message.appendClass}}'
              id='inputMessage'
              rows='3'
              name='message'
              value='{{letter.message}}'
            ></textarea>
            <div id='validationServerUsernameFeedback' class='invalid-feedback'>
              {{errorMessages.message.msg}}
            </div>
          </div>

          <button type='submit' class='btn btn-green-teal w-100'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='16'
              height='16'
              fill='currentColor'
              class='bi bi-send-fill me-2'
              viewBox='0 0 16 16'
            ></svg>Submit</button>
        </form>
        <!-- End form input -->
      </section>
      <!-- End Form -->
    </main>

    <!-- JS Core Bootstrap -->
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>
  </body>

</html>